{
  "manifest_version": 3,
  "name": "Peakee",
  "description": "Learn and use English everywhere",
  "author": "https://peakee.co",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-ancestors 'none';"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardWrite",
    "identity",
    "storage",
    "alarms",
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "open_pdf_file_peakee",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34-no-bg.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "128": "icon-128-no-bg.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"]
    },
    {
      "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file://*/*"],
      "run_at": "document_start",
      "all_frames": true,
      "css": ["pdfjs/contentstyle.css"],
      "js": ["pdfjs/contentscript.js"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.svg"],
      "matches": ["http://*/*", "https://*/*", "<all_urls>"]
    },
    {
      "resources": [
        "content/web/viewer.html",
        "http:/*",
        "https:/*",
        "ftp:/*",
        "file:/*",
        "chrome-extension:/*",
        "blob:*",
        "data:*",
        "filesystem:/*",
        "drive:*"
      ],
      "matches": ["http://*/*", "https://*/*", "<all_urls>"]
    }
  ],
  "file_browser_handlers": [
    {
      "id": "open-as-pdf",
      "default_title": "Open with PDF Viewer | Peakee",
      "file_filters": ["filesystem:*.pdf"]
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*", "<all_urls>"]
}
